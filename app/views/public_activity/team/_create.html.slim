li
  .activitie-container
    .activity-type.team-created
      i.fa.fa-users
    .user-image
      = user_image_tag(activity.owner.email)
    .description
      h6
        strong
          = "#{activity.owner.display_username} created team "
        = link_to activity.trackable.name, activity.trackable
      small
        i.fa.fa-clock-o
        = activity_time_tag activity.created_at
